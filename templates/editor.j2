{% extends "layout.j2" %}
{% block title %}
{% if slug and slug == "" %}New Article{% else %}Editing {{slug}}{% endif %}
{% endblock title %}

{% block content %}
<div class="editor-page">
    <div class="container page">
        <div class="row justify-content-center">
            {% if error %}
            <p class="col-md-10 offset-md-1 col-xs-12 error-messages">{{error}}</p>
            {% endif %}
            <div class="col-md-10 offset-md-1 col-xs-12">
                <form method="post" action="{{routes['editor']}}{% if slug and slug != '' %}/{{slug}}{% endif %}">
                    <fieldset>
                        <fieldset class="form-group">
                            <input name="title" type="text" class="form-control form-control-lg"
                                placeholder="Article Title" value="{%if article.title %}{{article.title}}{% endif %}" />
                        </fieldset>
                        <fieldset class="form-group">
                            <input name="description" type="text" class="form-control"
                                placeholder="What's this article about?"
                                value="{%if article.description %}{{article.description}}{% endif %}" />
                        </fieldset>
                        <fieldset class="form-group">
                            <textarea name="body" class="form-control" rows="8"
                                placeholder="Write your article (in markdown)">{%if article.body %}{{article.body}}{% endif %}</textarea>
                        </fieldset>
                        <fieldset class="form-group">
                            <input name="tagList" type="text" class="form-control"
                                placeholder="Enter tags(space separated)"
                                value="{% if article.tag_list %}{{article.tag_list}}{% endif %}" />
                        </fieldset>
                        <button class="btn btn-lg pull-xs-right btn-primary" type="submit">
                            Publish Article
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock content %}